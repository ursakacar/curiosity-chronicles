<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="LoginTestsCombined" verbose="1">

  <test name="PositiveTests" >
    <parameter name="browser" value="chrome" />
    <groups>
      <run>
      <include name="positiveTests" />
      </run>
    </groups>
    <classes>
       <class name="com.herokuapp.theinternet.LoginTestsCombined" />
    </classes>
  </test>

	<test name="NegativeUsernameTests">
    <parameter name="browser" value="edge" />
		<parameter name="username" value="incorrectUsername" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedMessage" value="Your username is invalid!" />
		<classes>
			<class name="com.herokuapp.theinternet.LoginTestsCombined">
        <methods>
          <include name="negativeLoginTests" />
        </methods>
			</class>
		</classes>
	</test>

	<test name="NegativePasswordTests">
    <parameter name="browser" value="firefox" />
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="incorrectPassword!" />
		<parameter name="expectedMessage" value="Your password is invalid!" />
		<classes>
			<class name="com.herokuapp.theinternet.LoginTestsCombined">
        <methods>
          <include name="negativeLoginTests" />
        </methods>
			</class>
		</classes>
	</test>

</suite>